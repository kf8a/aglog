<% set_form_dropdowns %>
<h1>Editing area</h1>
<%= error_messages_for 'area' %>
<%= form_for(:area, :url => area_path(@area), :html => { :method => :put }) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>
	<p>
		<label for='area_description'>Description</label>
		<%= f.text_field :description, :size => 50 %>
	</p>
	<p>
		<label for='area_study_id'>Study</label>		
		<%= f.select :study_id, @studies, {:include_blank => true} %>
		<label for='area_treatment_id'>Treatment</label>
		<%= f.select :treatment_id, @treatments , {:include_blank => true} %>
	</p>
  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', area_path(@area) %> |
<%= link_to 'Back', areas_path %>