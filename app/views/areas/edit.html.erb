<h1>Editing area</h1>
<%= render "shared/error_messages", :target => @area %>
<%= form_for(:area, :url => area_path(@area), :html => { :method => :put }) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>
    <p>
      <label for='area_description'>Description</label>
      <%= f.text_field :description, :size => 50 %>
    </p>
    <p>
      <label for='area_study_id'>Study</label>
      <%= f.select :study_id, options_from_collection_for_select(studies, 'id', 'name'), {:include_blank => true} %>
      <label for='area_treatment_id'>Treatment</label>
      <%= f.select :treatment_id, options_from_collection_for_select(treatments, 'id', 'name'), {:include_blank => true} %>
    </p>
  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', area_path(@area) %> |
<%= link_to 'Back', areas_path %>