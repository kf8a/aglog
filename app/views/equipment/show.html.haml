%p
  %b Name:
  = @equipment.name
  %br
  %ul
    = raw("<li>Uses Material</li>") if @equipment.use_material?
    = raw("<li>Is a Tractor</li>") if @equipment.is_tractor?
    = raw("<li>Archived</li>") if @equipment.archived?
  - if @equipment.description?
    %b Description:
    = @equipment.description

  %ul
  - @equipment.equipment_pictures.each do |picture|
    %li
      = image_tag(picture_url)

- @equipment.observations.each do |observation|
  %p
    = link_to observation.obs_date, observation_path(observation)
    = observation.observation_type
    = observation.comment

- if signed_in?
  = link_to 'Edit', edit_equipment_path(@equipment)
  |
= link_to 'Back', equipment_index_path
