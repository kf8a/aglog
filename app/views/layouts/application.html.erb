<!DOCTYPE html>
<html>
<head>
  <title>Aglog</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div class='header_bar'>
<%= link_to 'observation', observations_path %>&nbsp;&nbsp;
<%= link_to 'people', people_path, :accesskey => "P" %>&nbsp;&nbsp;
<%= link_to 'material', materials_path, :accesskey => "M" %>&nbsp;&nbsp;
<%= link_to 'equipment', equipment_index_path, :accesskey => "E" %>&nbsp;&nbsp;
<%= link_to 'units', units_path, :accesskey => "U" %>&nbsp;&nbsp;
<%= link_to 'areas', areas_path, :accesskey => "A" %>
</div>

<p style="color: green"><%= flash[:notice] %></p>
<p style="color: red"><%= flash[:error] %></p>

<%= yield %>

  <% unless current_page?(:controller => 'person_sessions', :action => 'new') %>
    <%= link_to "login", new_person_session_url if !signed_in? %>
  <% end %>
  <%= link_to "logout", logout_path if signed_in? %>
</body>
</html>
