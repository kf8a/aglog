<!DOCTYPE html>
<html>
<head>
  <title>Aglog : <%= controller.controller_name.titleize %> : <%= controller.action_name.titleize %></title>
  <%# <%= stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/themes/cupertino/jquery-ui.css" %>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag 'jquery-1.5.1.min', 'jquery-ui-1.8.13.custom.min' %>
  <%= javascript_include_tag 'rails', 'jquery.tokeninput','application', 'form_functions' %>

  <%= csrf_meta_tag %>
</head>
<body>

<div class='header_bar'>
  <%= link_to 'observation', observations_path %>&nbsp;&nbsp;
  <%= link_to 'people', people_path, :accesskey => "P" %>&nbsp;&nbsp;
  <%= link_to 'material', materials_path, :accesskey => "M" %>&nbsp;&nbsp;
  <%= link_to 'equipment', equipment_index_path, :accesskey => "E" %>&nbsp;&nbsp;
  <%= link_to 'units', units_path, :accesskey => "U" %>&nbsp;&nbsp;
  <%= link_to 'areas', areas_path, :accesskey => "A" %>&nbsp;&nbsp;
  <%= yield :header %>
</div>
<div id="main_page">

  <p style="color: green"><%= flash[:notice] %></p>
  <p style="color: red"><%= flash[:error] %></p>

  <%= yield %>

</div>
</body>
</html>
