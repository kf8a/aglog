<h1>Listing materials</h1>

<table class="table">
  <tr>
    <th class"left">Name</th>
    <th> Material Type</th>
  </tr>

  <% @materials.each do |material| %>
    <tr>
      <td> <%= material.name %></td>
      <td> <%= material.material_type_name %></td>
      <td> <%= link_to 'Show', material %></td>
      <td> <%= link_to 'Edit', edit_material_path(material) %></td>
      <td> <%= link_to 'Destroy', material, data: {confirm: "Are you sure you want to delete #{material.name}?"},
                                  method: :delete %></td>
    </tr>

  <% end %>
</table>

<%= link_to 'New material', new_material_path %>
