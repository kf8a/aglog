<%= f.inputs do  %>
  <%= f.input :person, :collection => Person.by_company(current_user.company), :include_blank=>false %>
  <%= f.input :hours, :input_html=> {:size=>5} %>
  <div class='setup'>
    <%= f.inputs :for => :setups do |builder| %>
      <%= render 'setup_fields', :f=>builder %>
    <% end %>
  </div>
  <%= link_to_add_fields 'Add Equipment', f, :setups %>
  <%= link_to_remove_fields "Remove Activity", f %>
<% end %>
