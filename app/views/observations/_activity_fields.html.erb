<fieldset class="form-group inputs row">
  <div class="row">
    <div class="col-sm-4">
      <% if only_current %>
        <%= f.select :person_id, Person.by_company(current_user.companies).current.ordered.map {|person| [person.name, person.id]}, {include_blank: false}, {class: "form-control"} %>
      <% else %>
        <%= f.select :person_id, Person.by_company(current_user.companies).ordered.map {|person| [person.name, person.id]}, { include_blank: false}, { class: "form-control"} %>
      <% end %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :hours, class: "form-control"  %>
    </div>
  </div>
  <div class="setup row">
    <%= f.fields_for :setups do |builder| %>
      <%= render "setup_fields", f: builder, only_current: only_current %>
    <% end %>
  </div>
  <%= f.hidden_field :_destroy %>
  <%= link_to "Remove Activity", '#', class: 'remove_fields' %>
  <%= link_to_add_fields "Add Equipment", f, :setups, only_current %>
</fieldset>
