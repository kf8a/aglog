<div class="setup">
  <%= form_for setup, :remote => true do |f| %>
    <%= f.label :equipment_id, "Equipment" %>
    <%= f.select :equipment_id, equipment, :include_blank => true %>
    <%= f.submit :class => 'activity_submitter' %>
  <% end %>
  <% unless setup.material_transactions.blank? %>
    <dt>Materials</dt>
    <dd>
      <dl>
        <%= render  :partial => 'material_transaction',
                    :collection => setup.material_transactions %>
      </dl>
    </dd>
  <% end %>

  <%= link_to 'add material', new_material_transaction_path(:setup_id => setup.id), :class => 'data_popup' %>
  |
  <%= link_to 'delete setup', setup_path(setup), :class => "deleter" %>
</div>