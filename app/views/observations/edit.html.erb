<h1>Edit observation</h1>

Created on: <%= @observation.created_on  %>

<p>
  <%= render(:partial => 'form', :locals => {:observation => @observation}) %>
</p>

<div id="activities">
  <fieldset id='activities'>
    <legend>Activities</legend>
    <%= flash[:activity] %>
    <dl>
      <%= render  :partial => 'activity',
                  :collection => @observation.activities %>
      <div>
        <input type="button" class="toggler" value="Display\Hide new activity?" />
        <div style="display: none">
          <%= render  :partial => 'activity', :locals => { :activity => @observation.activities.new } %>
        </div>
      </div>
    </dl>
  </fieldset>
</div>


<%= link_to 'Show', observation_path(@observation) %> |
<%= link_to 'List Observations', observations_path %>
