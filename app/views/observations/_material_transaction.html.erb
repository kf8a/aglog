<div class="material_transaction">
  <%= form_for material_transaction, :remote => true do |f| %>
    <%= f.hidden_field :setup_id %>
    <%= f.select :material_id, materials, :include_blank => true %> @<br />
    <%= f.text_field  :rate, :size => 12 %>
    <%= f.select :unit_id, units,  :include_blank => true %> per acre
    <%= f.submit :class => 'activity_submitter' %>
  <% end %>

  <% unless material_transaction.new_record? %>
    <%= link_to 'delete material', material_transaction_path(material_transaction), :class => "deleter" %>
  <% end %>
</div>