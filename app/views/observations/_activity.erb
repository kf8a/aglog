<div class="activity">
  <%= form_for activity, :remote => true do |f| %>
    <%= f.label :person_id, "Worker" %>
    <%= f.select :person_id, people, :include_blank => true %>
    <%= f.label :hours %>
    <%= f.text_field :hours, :Size => 5 %>
    <%= f.submit :class => 'activity_submitter' %>
  <% end %>
  <dt>Worker</dt>
    <dd><%= activity.person.try(:name) %></dd>
  <dt>Hours</dt>
    <dd><%= activity.hours %></dd>
  <% unless activity.setups.blank? %>
    <dt>Setups</dt>
    <dd>
      <dl>
        <%= render :partial => 'setup', :collection => activity.setups %>
      </dl>
    </dd>
  <% end %>

  <%= link_to 'add setup', new_setup_path(:activity_id => activity.id), :class => 'data_popup' %>
  |
  <%= link_to 'delete activity', activity_path(activity), :class => "deleter" %>
</div>
