<div class="form-group">
  <label>Name </label>
  <%= f.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
  <label>SI Unit</label>
  <%= f.select :si_unit_id, Unit.si_units.map {|x| [x[:name], x[:id]] }, html: {class: "form-control"}, include_blank: true %>
</div>

<div class="form-group">
  <label>Conversion Factor</label>
  <%= f.text_field :conversion_factor, class: "form-control" %>
</div>

<div class="checkbox">
  <label>
    <%= f.check_box :is_si_unit %>
    Is SI unit
  </label>
</div>
