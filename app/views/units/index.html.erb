<h1>Listing Units</h1>

<table>

	<tr>
		<th align="left">Name</th>
		<th align="left">S.I. Unit</th>
		<th align="right">Conversion Factor</th>
	</tr>
	<% for unit in @units %>
	  <tr>
	  	<td><%=h unit.name %></td>
	  	<td><%=h unit.si_unit_id %></td>
	  	<td><%=h unit.conversion_factor %></td>
	  	<td><%= link_to 'Show', unit_path(unit) %></td>
    	<td><%= link_to 'Edit', edit_unit_path(unit) if current_user %></td>
      <td><%= link_to 'Destroy', unit_path(unit), 
        :data => {:confirm => "Are you sure you want to delete #{unit.name}?"}, 
        :method => :delete if current_user %></td>

	  </tr>
	 <% end %>
</table>

<br />

<%= link_to 'New Unit', new_unit_path if current_user %>
