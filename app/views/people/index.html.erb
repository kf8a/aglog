<h1>People</h1>

<div>
  <% if signed_in? %>
    <%= link_to 'New person', new_person_path %>
  <% end %>
</div>

<div class='col-sm-5'>
  <table class='table'>
    <% @people.each do | person| %>
      <tr>
        <td> <%=h person.given_name %></td>
        <td> <%=h person.sur_name %><td>
            <% if signed_in? %>
              <td> <%= link_to 'Show', person_path(person) %></td>
              <td> <%= link_to 'Edit', edit_person_path(person) %></td>
              <td> <%= link_to 'Destroy', person_path(person),
                                          data: {confirm: "Are you sure you want to delete #{person.name}?"},
                                          method: :delete %></td>
            <% end %>
      </tr>
    <% end %>
  </table>
  <br/>

</div>

